{
    "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS", // Ensure CommonJS to match package.json
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./"
    },
    "include": ["server.ts", "api/*.ts"]
  }